.btn-responsive
  position absolute
  top 42px
  left 0
  z-index 9999
  margin 0 5rem 0 1.6rem
  color #FFFFFF
  pointer-events initial
  transition transform .5s 0s $easing-default,
             opacity .3s 0s $easing-default

  &:before
    content ''
    display inline-block
    background transparent url("../img/icons-png/toggle.png") no-repeat;
    width 23px
    height 16px

  /*----------  Media Queries .btn-responsive  ----------*/

  +below( 1024px )
    margin 0 2rem

  +below( 990px )
    top 22px
    right 20px
    left auto
    margin-left 0
    margin-right 0

  +mobile()
    transform translateX (100% )



/*================================
=            Lightbox            =
================================*/

.responsive-modal
  position fixed
  z-index 10
  width 100%
  height 0%
  background-color rgba(89, 90, 89, 0.9)
  overflow auto
  -webkit-overflow-scrolling touch

  .box-list
    align()
    opacity 0
    padding 0 2rem
    max-width 1210px
    width 100%

  .list
    col( 1/5, gutter: 4rem )
    typo('semi-bold', 1.6rem)
    margin-bottom 0
    color #FFF

    > a
      display block

    &:last-child
      ul
        padding-top 4rem

    ul
      list-style none
      padding 0

    li
      margin-bottom 1.8rem
      font-size inherit

    .label
      margin-bottom 3rem
      font-size inherit
      text-transform uppercase

    a
      color inherit
      font-size inherit

      &:hover
        color $color-green-light !important

    a.checked
      color $color-green-light !important

    &.access-account
      display none

  .circle
    position relative
    display inline-block
    pointer-events none
    z-index -1
    width 7.1rem
    height 7rem
    margin-bottom 2.4rem

  /*----------  MQ .responsive-modal  ----------*/

  // Tablet
  @media all and ( device-width: 768px ) and ( device-height: 1024px ) and ( orientation: landscape )
    .list
      col( 1/6, gutter: 0 )
      padding 0 2rem

      &.access-account
        display block

  +below( 1023px )
    .list
      col( 1/3, gutter: 0)
      margin-bottom 2rem

      &.access-account
        display block

  +below( 620px )
    .box-list
      center( 28.6rem, 0 )
      position relative
      top 0
      left 0
      transform none
      padding 9rem 0 2rem 0

    .list
      stack()

      &:last-child
        ul
          padding-top 0

  @media screen and ( max-height: 600px )
    .box-list
      position relative
      top 0
      left 0
      transform none
      margin 0
      padding 5rem 4rem
      max-width 100% !important;



/*================================
=            Only IEs            =
================================*/

.ie
  .responsive-modal
    overflow-x hidden
    -ms-overflow-x hidden



/*======================================
=            Useful classes            =
======================================*/

.toggle-icon
  &:before
    position relative
    top -4px
    height 24px
    background-position 0 -19px
